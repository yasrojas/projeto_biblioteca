@model Usuario
@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<h1 class="row justify-content-md-center">Cadastro de Usuário</h1>

<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" class="form-control" required/>
        </div>
        <div>
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" required/>
        </div>
        <div> 
            <p>Tipo</p>
            <div>
                <select asp-for="Tipo">
                    <option value="@Usuario.ADMIN">Administrador</option>
                    <option value="@Usuario.PADRAO">Padrão</option>
                </select>
            </div>
        </div>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>